{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-unused-vars": "off",
        "space-before-function-paren": "off",
        "no-trailing-spaces": "off",
        "no-console": "off",
        "no-const-assign": "error",
        "no-useless-constructor": "off",
        "computed-property-even-spacing": "off"
    }
}